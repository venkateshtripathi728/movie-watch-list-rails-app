<div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('/assets/classical.jpeg' )">
  <p><%= @list.name %> movies</p>
</div>

<%= link_to 'add a movie', new_list_bookmark_path(@list) %>
<ul class="list-group">
<div class="row">
  <% @list.movies.each do |movie| %>
   <% @bookmark = Bookmark.find_by(list: @list, movie: movie)%> 
    <div class="col-4">
  <div class="movie-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
    <li class="list-group-item"><%= movie.title %>
    </li>
  </div>
  </div>
    <div class="review"><%= @bookmark.comment %><%= link_to 'delete', bookmark_path(@bookmark), method: :delete%></div>
  <% end %>
  </div>
</ul>
<%= link_to  "Back to list", lists_path %>
